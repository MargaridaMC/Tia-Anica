<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingStart="@dimen/medium_padding"
    android:paddingEnd="@dimen/medium_padding"
    android:paddingTop="@dimen/small_padding"
    android:paddingBottom="@dimen/small_padding"
    android:id="@+id/element_cache_layout">


    <ImageView
        android:id="@+id/cache_symbol"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/cache_icon_type_traditional" />



    <TextView
        android:id="@+id/cache_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space"
        android:layout_marginEnd="@dimen/small_padding"
        android:textAppearance="@style/MainText"
        app:layout_constraintEnd_toStartOf="@id/go_to_button"
        app:layout_constraintStart_toEndOf="@+id/cache_symbol"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/cache_info_0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/SmallText"
        app:layout_constraintTop_toBottomOf="@+id/cache_title"
        app:layout_constraintEnd_toEndOf="@+id/cache_title"
        app:layout_constraintStart_toStartOf="@+id/cache_title"
        />

    <TextView
        android:id="@+id/cache_info_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/SmallText"
        app:layout_constraintTop_toBottomOf="@+id/cache_info_0"
        app:layout_constraintEnd_toEndOf="@+id/cache_info_0"
        app:layout_constraintStart_toStartOf="@+id/cache_info_0"
        />

    <TextView
        android:id="@+id/hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/SmallText"
        android:textSize="0sp"
        app:layout_constraintTop_toBottomOf="@+id/cache_info_1"
        app:layout_constraintEnd_toEndOf="@+id/cache_info_1"
        app:layout_constraintStart_toStartOf="@+id/cache_info_1"
        />

    <TextView
        android:id="@+id/cache_info_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/SmallText"
        app:layout_constraintTop_toBottomOf="@+id/hint"
        app:layout_constraintEnd_toEndOf="@+id/hint"
        app:layout_constraintStart_toStartOf="@+id/hint"
        />

    <Button
        android:id="@+id/go_to_button"
        android:layout_width="@dimen/small_icon_size"
        android:layout_height="@dimen/small_icon_size"
        android:background="@drawable/direction_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_button"/>

    <Button
        android:id="@+id/edit_button"
        android:layout_width="@dimen/small_icon_size"
        android:layout_height="@dimen/small_icon_size"
        android:background="@drawable/pencil"
        android:layout_marginTop="@dimen/small_padding"
        app:layout_constraintTop_toBottomOf="@+id/go_to_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>