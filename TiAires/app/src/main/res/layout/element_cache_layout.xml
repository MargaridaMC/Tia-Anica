<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingStart="@dimen/small_padding"
    android:paddingEnd="@dimen/small_padding"
    android:paddingTop="@dimen/small_padding"
    android:paddingBottom="@dimen/small_padding"
    android:id="@+id/element_cache_layout">


    <ImageView
        android:id="@+id/cache_symbol"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cache_title"
        app:srcCompat="@drawable/cache_icon_type_traditional" />


    <TextView
        android:id="@+id/cache_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_padding"
        android:layout_marginEnd="@dimen/small_padding"
        android:textAppearance="@style/MainText"
        android:paddingBottom="2dp"
        app:layout_constraintEnd_toStartOf="@id/go_to_button"
        app:layout_constraintStart_toEndOf="@+id/cache_symbol"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/cache_info_0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/cache_title"
        app:layout_constraintStart_toStartOf="@+id/cache_title"
        app:layout_constraintEnd_toEndOf="@+id/cache_title">

        <TextView
            android:id="@+id/cache_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TextView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TextView"
            android:text="@string/dash"/>

        <TextView
            android:id="@+id/cache_dif_ter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TextView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TextView"
            android:text="@string/dash"/>

        <TextView
            android:id="@+id/cache_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TextView"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cache_info_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cache_info_0"
        app:layout_constraintStart_toStartOf="@+id/cache_title"
        app:layout_constraintEnd_toEndOf="@+id/cache_title"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cache_favs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/cache_has_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TextView"
            android:text="@string/cache_has_no_hint"/>

        <TextView
            android:id="@+id/dnf_risk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TextView"
            android:visibility="gone"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/expandable_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/cache_info_1"
        app:layout_constraintEnd_toEndOf="@+id/cache_title"
        app:layout_constraintStart_toStartOf="@+id/cache_title">

        <GridLayout
            android:id="@+id/last10LogsSquares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/line_space"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:columnCount="10"
            android:rowCount="1">

            <TextView
                android:text="@string/square"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/very_large_text_size"/>

            <TextView
                android:text="@string/square"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/very_large_text_size"/>

            <TextView
                android:text="@string/square"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/very_large_text_size"/>

            <TextView
                android:text="@string/square"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/very_large_text_size"/>

            <TextView
                android:text="@string/square"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/very_large_text_size"/>

            <TextView
                android:text="@string/square"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/very_large_text_size"/>

            <TextView
                android:text="@string/square"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/very_large_text_size"/>

            <TextView
                android:text="@string/square"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/very_large_text_size"/>

            <TextView
                android:text="@string/square"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/very_large_text_size"/>

            <TextView
                android:text="@string/square"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/very_large_text_size"/>

        </GridLayout>

        <TextView
            android:id="@+id/hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/TextView"
            android:paddingTop="@dimen/line_space"
            android:paddingBottom="@dimen/line_space"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/last10LogsSquares"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/dnf_info_expanded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/TextView"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/go_to_button"
        android:layout_width="@dimen/small_icon_size"
        android:layout_height="@dimen/small_icon_size"
        android:background="@drawable/direction_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_button"/>

    <Button
        android:id="@+id/edit_button"
        android:layout_width="@dimen/small_icon_size"
        android:layout_height="@dimen/small_icon_size"
        android:background="@drawable/pencil"
        app:layout_constraintTop_toBottomOf="@+id/go_to_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <CheckBox
        android:id="@+id/extra_info_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/more_info_arrow"
        app:layout_constraintStart_toStartOf="@id/cache_symbol"
        app:layout_constraintEnd_toEndOf="@id/cache_symbol"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>