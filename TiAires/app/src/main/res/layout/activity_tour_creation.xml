<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TourCreationActivity"
    tools:showIn="@layout/activity_tour_creation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimary"
        android:paddingBottom="@dimen/small_padding">

        <Button
            android:id="@+id/back_button"
            android:layout_width="@dimen/main_text_size"
            android:layout_height="@dimen/main_text_size"
            android:layout_marginStart="@dimen/margin"
            android:background="@drawable/back_button"
            android:onClick="goBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tour_name_view"
            app:layout_constraintBottom_toBottomOf="@id/tour_name"/>

        <TextView
            android:id="@+id/tour_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:text="Tour name"
            android:textSize="@dimen/main_text_size"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/back_button"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/tour_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginStart="@dimen/margin"
            android:textAppearance="@style/AppBarTextStyle"
            android:textColor="@color/colorLight"
            android:backgroundTint="@color/colorLight"
            android:singleLine="true"
            android:text="UBahn Tour"
            app:layout_constraintStart_toEndOf="@id/back_button"
            app:layout_constraintTop_toBottomOf="@id/tour_name_view"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/geocache_codes_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:text="Geocache codes:"
        android:textAppearance="@style/MainText"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/geocache_codes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin"
        android:gravity="top|left"
        android:textColor="@color/white"
        android:textSize="@dimen/main_text_size"
        android:background="@drawable/text_box_with_border"
        android:text="GC344M3,GC347B0,GC347BT,GC32XFX,GC347C0,GC345GB,GC347C3,GC345GE,GC347CN,GC345GW,GC347CY,GC345H9,GC3440R,GC347DD,GC33WCG,GC345W9,GC345XT,GC346BM,GC7KF21,GC78Z4R,GC5GX28,GC346EB,GC345J5,GC345JK,GC345K5,GC808MR,GC345KY,GC5FAT8,GC345MF,GC5KWER,GC345N6,GC347EV,GC345NM,GC347F1,GC345QX,GC347FC,GC347FK,GC343YK,GC305ZJ,GC343Z6,GC2HNG5,GC343ZE,GC33TX6,GC343ZP,GC33TYW,GC34403,GC33TZB,GC3440B,GC33TZW,GC3440K"
        app:layout_constraintBottom_toTopOf="@id/create_tour_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/geocache_codes_view" />

    <Button
        android:id="@+id/create_tour_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:text="Create Tour"
        android:textAppearance="@style/MainText"
        android:textColor="@color/white"
        android:backgroundTint="@color/colorPrimaryDark"
        android:onClick="createTour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>