<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TourCreationActivity"
    tools:showIn="@layout/activity_tour_creation">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/action_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/colorPrimary"
                android:paddingBottom="@dimen/small_padding">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:theme="@style/CustomActionBar"/>

                <TextView
                    android:id="@+id/tour_name_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:text="Tour name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_text_size"
                    app:layout_constraintStart_toEndOf="@id/toolbar"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/tour_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin"
                    android:textAppearance="@style/AppBarTextStyle"
                    android:textColor="@color/colorLight"
                    android:backgroundTint="@color/colorLight"
                    android:singleLine="true"
                    app:layout_constraintStart_toEndOf="@id/toolbar"
                    app:layout_constraintTop_toBottomOf="@id/tour_name_view"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/geocache_codes_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:text="Geocache codes:"
        android:textAppearance="@style/MainText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action_bar" />

    <EditText
        android:id="@+id/geocache_codes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin"
        android:gravity="top|start"
        android:background="@drawable/text_box_with_border"
        android:theme="@style/EditText"
        app:layout_constraintBottom_toTopOf="@id/create_tour_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/geocache_codes_view" />

    <Button
        android:id="@+id/create_tour_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:text="Create Tour"
        android:textAppearance="@style/MainText"
        android:textColor="@color/white"
        android:backgroundTint="@color/colorPrimaryDark"
        android:onClick="createTour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/progress_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:padding="@dimen/margin"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@+id/geocache_codes"
        app:layout_constraintBottom_toBottomOf="@+id/geocache_codes"
        app:layout_constraintStart_toStartOf="@+id/geocache_codes"
        app:layout_constraintEnd_toEndOf="@+id/geocache_codes">

        <ProgressBar
            android:id="@+id/progress_circular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleLarge"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Getting your tour."
            android:layout_marginTop="@dimen/margin"
            app:layout_constraintTop_toBottomOf="@+id/progress_circular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>