<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <font
        android:fontStyle="normal"
        android:fontWeight="400"
        android:font="@font/futura_book"

        app:fontStyle = "normal"
        app:fontWeight="400"
        app:font="@font/futura_book"/>
    <font
        android:fontStyle="italic"
        android:fontWeight="400"
        android:font="@font/futura_book_italic"

        app:fontStyle="italic"
        app:fontWeight="400"
        app:font="@font/futura_book_italic"/>

    <font
        android:fontStyle="normal"
        android:fontWeight="700"
        android:font="@font/futura_medium"

        app:fontStyle="normal"
        app:fontWeight="700"
        app:font="@font/futura_medium"/>

    <font
        android:fontStyle="italic"
        android:fontWeight="700"
        android:font="@font/futura_medium_italic"

        app:fontStyle="italic"
        app:fontWeight="700"
        app:font="@font/futura_medium_italic"/>

</font-family>